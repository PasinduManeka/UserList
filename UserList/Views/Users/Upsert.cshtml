<!--We pass the User model from the controlle-->
@model UserList.Models.User
<!--We have to check it is add or edit using Model.ID-->

<br />
<h2 class="text-info">@(Model.ID!=0 ? "Edit" : "Create") User</h2>
<br />

<div class="border container" style="padding:30px;">
    <form>
        @if (Model.ID != 0)
        {
            <input asp-for="ID" type="hidden" id="id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <!--Name-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input  id="name" asp-for="Name" class="form-control" />
                <!--To display the validation error-->
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <!--Age-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Age"></label>
            </div>
            <div class="col-6">
                <input id="age" asp-for="Age" class="form-control" />
                <!--To display the validation error-->
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>
        <!--City-->
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="City"></label>
            </div>
            <div class="col-6">
                <input id="city" asp-for="City" class="form-control" />
                <!--To display the validation error-->
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <!--Add or Update-->
            <div class="col-3 offset-3">
                <button type="button" id="btnUpsert" class="btn btn-outline-primary form-control">
                    @(Model.ID != 0 ? "Update" : "Create")
                </button>
            </div>
            <!--Back to List-->
            <div class="col-3">
                <a asp-action="Index" class="btn btn-outline-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

<!--Validation in the client side-->
@section Scripts{
    <script src="~/js/Upser.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

